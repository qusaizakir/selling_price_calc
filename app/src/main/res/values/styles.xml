<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextCalc" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">@dimen/calculation_start_margin</item>
        <item name="android:layout_marginEnd">@dimen/calculation_end_margin</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="TitleText" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="DialogTitleText" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>
    
    <style name="CategoryTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CategoryContentText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TotalTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TotalText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ListFragmentFAB" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>